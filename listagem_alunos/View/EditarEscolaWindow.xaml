<Window x:Class="listagem_alunos.EditarEscolaWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:listagem_alunos"
        mc:Ignorable="d"
        Title="EditarEscolaWindow" Height="188" Width="331">
    <Grid Margin="0,0,0,-46">
        <Grid.RowDefinitions>
            <RowDefinition Height="137*"/>
            <RowDefinition Height="35*"/>
        </Grid.RowDefinitions>
        <TextBox Text="{Binding Nome}" HorizontalAlignment="Center" Height="32" Margin="0,54,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="306"/>
        <Button Click="botao_salvar" Content="Salvar" HorizontalAlignment="Center" Height="24" Margin="0,101,0,0" VerticalAlignment="Top" Width="168"/>
        <Label Content="Nome da Escola:" HorizontalAlignment="Left" Height="33" Margin="8,24,0,0" VerticalAlignment="Top" Width="154"/>

    </Grid>
</Window>
